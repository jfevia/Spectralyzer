<wpf:FluentWindow x:Class="Spectralyzer.Updater.Host.Views.MainWindow"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                  xmlns:ui="clr-namespace:Spectralyzer.Shared.UI;assembly=Shared.UI"
                  xmlns:viewModels="clr-namespace:Spectralyzer.Updater.Host.ViewModels"
                  xmlns:wpf="http://schemas.lepo.co/wpfui/2022/xaml"
                  Title="Spectralyzer"
                  Width="800"
                  Height="450"
                  d:DataContext="{d:DesignInstance viewModels:MainViewModel}"
                  ui:ViewModelLocator.DataContext="{x:Type viewModels:MainViewModel}"
                  ExtendsContentIntoTitleBar="True"
                  ResizeMode="NoResize"
                  WindowBackdropType="Mica"
                  WindowCornerPreference="Default"
                  WindowStartupLocation="CenterOwner"
                  mc:Ignorable="d">
    <b:Interaction.Triggers>
        <b:EventTrigger EventName="Loaded">
            <b:EventTrigger.Actions>
                <b:InvokeCommandAction Command="{Binding InitializeCommand}" />
            </b:EventTrigger.Actions>
        </b:EventTrigger>
    </b:Interaction.Triggers>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <wpf:TitleBar Title="Spectralyzer"
                      Grid.Row="0"
                      CanMaximize="False"
                      ShowMaximize="False">
            <wpf:TitleBar.Icon>
                <wpf:ImageIcon Source="pack://application:,,,/Shared.UI;component/Resources/Logo.ico" />
            </wpf:TitleBar.Icon>
        </wpf:TitleBar>
        <DockPanel Grid.Row="1" LastChildFill="True">
            <Image Width="300"
                   Margin="25"
                   Source="pack://application:,,,/Shared.UI;component/Resources/Logo.png"
                   Stretch="Uniform" />
            <Border Margin="0,5"
                    Padding="25"
                    BorderBrush="Gray"
                    BorderThickness="1,0,0,0">
                <DockPanel HorizontalAlignment="Stretch"
                           VerticalAlignment="Center"
                           LastChildFill="True">
                    <wpf:TextBlock Margin="0,5"
                                   DockPanel.Dock="Top"
                                   Text="Updating..."
                                   TextWrapping="Wrap" />
                    <StackPanel>
                        <wpf:TextBlock Margin="0,5"
                                       Text="Downloading..."
                                       TextWrapping="Wrap" />
                        <ProgressBar Margin="0,10"
                                     BorderThickness="0"
                                     Maximum="1"
                                     Minimum="0"
                                     Value="{Binding Progress, Mode=OneWay}" />
                        <TextBlock Text="1.0.0.0" />
                    </StackPanel>
                </DockPanel>
            </Border>
        </DockPanel>
        <Border Grid.Row="2"
                Padding="0,5,25,5"
                VerticalAlignment="Center"
                BorderBrush="Gray"
                BorderThickness="0,1,0,0">
            <wpf:Button Margin="0,5"
                        HorizontalAlignment="Right"
                        Appearance="Secondary"
                        Command="{Binding CancelCommand}"
                        Content="Cancel"
                        IsCancel="True"
                        IsDefault="False" />
        </Border>
    </Grid>
</wpf:FluentWindow>
