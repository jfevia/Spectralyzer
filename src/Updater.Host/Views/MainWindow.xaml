<wpf:FluentWindow x:Class="Spectralyzer.Updater.Host.Views.MainWindow"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                  xmlns:ui="clr-namespace:Spectralyzer.Shared.UI;assembly=Shared.UI"
                  xmlns:viewModels="clr-namespace:Spectralyzer.Updater.Host.ViewModels"
                  xmlns:wpf="http://schemas.lepo.co/wpfui/2022/xaml"
                  Title="Spectralyzer"
                  Width="800"
                  Height="450"
                  d:DataContext="{d:DesignInstance viewModels:MainViewModel}"
                  ui:ViewModelLocator.DataContext="{x:Type viewModels:MainViewModel}"
                  ExtendsContentIntoTitleBar="True"
                  WindowBackdropType="Mica"
                  WindowCornerPreference="Default"
                  WindowStartupLocation="CenterOwner"
                  mc:Ignorable="d">
    <b:Interaction.Triggers>
        <b:EventTrigger EventName="Loaded">
            <b:EventTrigger.Actions>
                <b:InvokeCommandAction Command="{Binding InitializeCommand}" />
            </b:EventTrigger.Actions>
        </b:EventTrigger>
    </b:Interaction.Triggers>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" MinHeight="60" />
        </Grid.RowDefinitions>
        <wpf:TitleBar Title="Spectralyzer" Grid.Row="0" />
        <Border Grid.Row="1"
                Margin="0,5"
                Padding="25"
                BorderBrush="Gray"
                BorderThickness="1,0,0,0">
            <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" MinHeight="45" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0"
                           FontWeight="SemiBold"
                           Text="Updating..."
                           TextWrapping="Wrap" />
                <StackPanel Grid.Row="1">
                    <TextBlock Text="Downloading..." TextWrapping="Wrap" />
                    <ProgressBar Margin="0,8"
                                 BorderThickness="0"
                                 Value="69" />
                    <TextBlock Text="1.0.0.0" />
                </StackPanel>
            </Grid>
        </Border>
        <Border Grid.Row="2"
                Padding="0,6,24,4"
                VerticalAlignment="Center"
                BorderBrush="Gray"
                BorderThickness="0,1,0,0">
            <Button Margin="0,6"
                    HorizontalAlignment="Right"
                    Command="{Binding CancelCommand}"
                    Content="Cancel"
                    IsCancel="True"
                    IsDefault="False" />
        </Border>
    </Grid>
</wpf:FluentWindow>
