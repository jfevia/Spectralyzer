<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:viewModels="clr-namespace:Spectralyzer.App.Host.Features.RequestComposer.ViewModels">

    <DataTemplate DataType="{x:Type viewModels:RequestComposerItem}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <ComboBox Grid.Column="0"
                          ItemsSource="{Binding Methods}"
                          SelectedItem="{Binding SelectedMethod}" />
                <TextBox Grid.Column="1"
                         VerticalContentAlignment="Center"
                         HorizontalScrollBarVisibility="Auto"
                         Text="{Binding Url}" />
                <Button Grid.Column="2"
                        Command="{Binding SendRequestCommand}"
                        Content="Send" />
            </Grid>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TabControl Grid.Column="0" ItemsSource="{Binding RequestItems}">
                    <TabControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Title}" />
                        </DataTemplate>
                    </TabControl.ItemTemplate>
                </TabControl>
                <TabControl Grid.Column="1" ItemsSource="{Binding ResponseItems}">
                    <TabControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Title}" />
                        </DataTemplate>
                    </TabControl.ItemTemplate>
                </TabControl>
            </Grid>
        </Grid>
    </DataTemplate>

    <DataTemplate DataType="{x:Type viewModels:RequestParametersViewModel}">
        <DockPanel LastChildFill="True">
            <ToolBar DockPanel.Dock="Top">
                <Button MinWidth="100"
                        Margin="5"
                        Command="{Binding AddCommand}"
                        Content="Add" />
                <Button MinWidth="100"
                        Margin="5"
                        Command="{Binding DeleteAllCommand}"
                        Content="Delete all" />
            </ToolBar>
            <DataGrid AutoGenerateColumns="False" ItemsSource="{Binding Items}">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Key}" Header="Key" />
                    <DataGridTextColumn Binding="{Binding Value}" Header="Value" />
                    <DataGridTextColumn Binding="{Binding Description}" Header="Description" />
                </DataGrid.Columns>
            </DataGrid>
        </DockPanel>
    </DataTemplate>

    <DataTemplate DataType="{x:Type viewModels:RequestBodyViewModel}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <ComboBox Grid.Row="0"
                      HorizontalAlignment="Left"
                      ItemsSource="{Binding Formats}"
                      SelectedItem="{Binding SelectedFormat}" />
            <TextBox Grid.Row="1"
                     Text="{Binding Body}"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto" />
        </Grid>
    </DataTemplate>

    <DataTemplate DataType="{x:Type viewModels:RequestAuthViewModel}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <ComboBox Grid.Row="0"
                      HorizontalAlignment="Left"
                      ItemsSource="{Binding TokenTypes}"
                      SelectedItem="{Binding SelectedTokenType}" />
            <TextBox Grid.Row="1"
                     Text="Hello World!"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto" />
        </Grid>
    </DataTemplate>

    <DataTemplate DataType="{x:Type viewModels:RequestHeadersViewModel}">
        <DockPanel LastChildFill="True">
            <ToolBar DockPanel.Dock="Top">
                <Button MinWidth="100"
                        Margin="5"
                        Command="{Binding AddCommand}"
                        Content="Add" />
                <Button MinWidth="100"
                        Margin="5"
                        Command="{Binding DeleteAllCommand}"
                        Content="Delete all" />
            </ToolBar>
            <DataGrid AutoGenerateColumns="False" ItemsSource="{Binding Items}">
                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="Key">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBox IsReadOnly="{Binding IsReadOnly, Mode=OneWay}" Text="{Binding Key}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                        <DataGridTemplateColumn.CellEditingTemplate>
                            <DataTemplate>
                                <TextBox IsReadOnly="{Binding IsReadOnly, Mode=OneWay}" Text="{Binding Key}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellEditingTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="Value">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBox IsReadOnly="{Binding IsReadOnly, Mode=OneWay}" Text="{Binding Value}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                        <DataGridTemplateColumn.CellEditingTemplate>
                            <DataTemplate>
                                <TextBox IsReadOnly="{Binding IsReadOnly, Mode=OneWay}" Text="{Binding Value}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellEditingTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Binding="{Binding Description}" Header="Description" />
                </DataGrid.Columns>
            </DataGrid>
        </DockPanel>
    </DataTemplate>

    <DataTemplate DataType="{x:Type viewModels:ResponseHeadersViewModel}">
        <DataGrid AutoGenerateColumns="False" ItemsSource="{Binding Items}">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Key, Mode=OneWay}"
                                    Header="Key"
                                    IsReadOnly="True" />
                <DataGridTextColumn Binding="{Binding Value, Mode=OneWay}"
                                    Header="Value"
                                    IsReadOnly="True" />
            </DataGrid.Columns>
        </DataGrid>
    </DataTemplate>

    <DataTemplate DataType="{x:Type viewModels:ResponsePreviewViewModel}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <ComboBox Grid.Row="0"
                      HorizontalAlignment="Left"
                      ItemsSource="{Binding Formats}"
                      SelectedItem="{Binding SelectedFormat}" />
            <TextBox Grid.Row="1"
                     Text="{Binding Body}"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto" />
        </Grid>
    </DataTemplate>

    <DataTemplate DataType="{x:Type viewModels:CookiesViewModel}">
        <DockPanel LastChildFill="True">
            <ToolBar DockPanel.Dock="Top">
                <Button MinWidth="100"
                        Margin="5"
                        Command="{Binding AddCommand}"
                        Content="Add" />
                <Button MinWidth="100"
                        Margin="5"
                        Command="{Binding DeleteAllCommand}"
                        Content="Delete all" />
            </ToolBar>
            <DataGrid AutoGenerateColumns="False" ItemsSource="{Binding Items}">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Key}" Header="Key" />
                    <DataGridTextColumn Binding="{Binding Value}" Header="Value" />
                    <DataGridTextColumn Binding="{Binding Domain}" Header="Domain" />
                    <DataGridTextColumn Binding="{Binding Path}" Header="Path" />
                    <DataGridTextColumn Binding="{Binding Expires}" Header="Expires" />
                    <DataGridTextColumn Binding="{Binding IsSecure}" Header="Secure" />
                    <DataGridTextColumn Binding="{Binding IsHttpOnly}" Header="HTTP only" />
                </DataGrid.Columns>
            </DataGrid>
        </DockPanel>
    </DataTemplate>

</ResourceDictionary>