<ui:FluentWindow x:Class="Spectralyzer.App.Host.Views.MainWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:host="clr-namespace:Spectralyzer.App.Host"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:requestComposer="clr-namespace:Spectralyzer.App.Host.Features.RequestComposer.Pages"
                 xmlns:trafficAnalyzer="clr-namespace:Spectralyzer.App.Host.Features.TrafficAnalyzer.Pages"
                 xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                 xmlns:viewModels="clr-namespace:Spectralyzer.App.Host.ViewModels"
                 Title="Spectralyzer"
                 Width="1200"
                 Height="800"
                 d:DataContext="{d:DesignInstance viewModels:MainViewModel}"
                 host:ViewModelLocator.DataContext="{x:Type viewModels:MainViewModel}"
                 ExtendsContentIntoTitleBar="True"
                 WindowBackdropType="Mica"
                 WindowCornerPreference="Default"
                 WindowStartupLocation="CenterOwner"
                 mc:Ignorable="d">
    <DockPanel LastChildFill="True">
        <ui:TitleBar Title="Spectralyzer" DockPanel.Dock="Top" />
        <ui:NavigationView MinHeight="300"
                           x:Name="NavigationView"
                           Margin="0"
                           IsBackButtonVisible="Collapsed"
                           IsPaneToggleVisible="False"
                           PaneDisplayMode="LeftFluent">
            <ui:NavigationView.MenuItems>
                <ui:NavigationViewItem Content="Traffic"
                                       Icon="{ui:SymbolIcon GlobeSurface24}"
                                       TargetPageType="{x:Type trafficAnalyzer:TrafficAnalyzerItemPage}" />
                <ui:NavigationViewItem Content="Create"
                                       Icon="{ui:SymbolIcon NotepadEdit20}"
                                       TargetPageType="{x:Type requestComposer:RequestComposerItemPage}" />
            </ui:NavigationView.MenuItems>
        </ui:NavigationView>
    </DockPanel>
</ui:FluentWindow>